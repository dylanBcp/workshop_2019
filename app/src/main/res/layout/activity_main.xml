<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".WelcomeActivity"
    android:background="#46D6AA"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/activity_main_logo"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:contentDescription="@string/logo"
        app:srcCompat="@drawable/logo"
        android:layout_gravity="center"
        android:layout_marginBottom="50sp"/>

    <TextView
        android:id="@+id/activity_main_desc_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:paddingHorizontal="20sp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Fusce a maximus augue. Nam tempor."
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <Button
        android:id="@+id/activity_main_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:background="@drawable/button"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:text="@string/cest_parti"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        />
</LinearLayout>
